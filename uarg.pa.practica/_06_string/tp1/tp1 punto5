package tp1; 
import java.util.Scannner; 

public class Ejercicio5 {
    public static void main(String[] args) {
        Scanner entrada = new Scanner(System.in);

        char DIA;

        System.out.print("Ingrese un dia (L, M, I, J, V, S, D): ");
        DIA = entrada.next().charAt(0);

        switch (DIA) {
            case 'L':
            System.out.println("Lunes");
            break
            case 'M':
            System.out.println("Martes - HOY TENGO RESOLUCION");
            break
            case 'I':
            System.out.println("Miercoles - HOY TENGO RESOLUCION");
            break
            case 'J':
            System.out.println("Jueves - HOY TENGO RESOLUCION");
            break
            case 'V':
            System.out.println("Viernes");
            break
            case 'S':
            System.out.println("Sabado");
            break
            case 'D':
            System.out.println("Domingo")
            break
        default:

        System.out.println("Letra ingresada no valida");
        }
        entrada.close();
    }
}
